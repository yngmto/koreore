{
  "version": 2, //Vercelの設定ファイルのver
  "builds": [ //プロジェクトのビルド方法
    {
      "src": "api/index.js", //ビルド対象のファイル
      "use": "@vercel/node" //Nodeランタイムを使用してビルドするよう指示
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)", //すべてのリクエストを/api/index.jsに転送するよう指示
      "destination": "/api"
    }
  ]
}